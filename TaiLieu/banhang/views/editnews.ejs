        <li><a href="http://localhost:3001">Chat What !</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="http://localhost:3000/info"><span class="glyphicon glyphicon-user"></span> Sim Nguyễn</a></li>
        <li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
      </ul>
    </div>
  </div>
</nav>


<div class="container-fluid">
  <div class="row">
  	<div class="col-md-8 col-md-push-2 table-responsive">
  	   <form action="../edit/<%= data.id%>" method="post" role="form" enctype="multipart/form-data">
         <legend>chinh sua file</legend>
         
         <div class="form-group">
           <label for="">Tac gia</label>
           <input type="text" class="form-control" name="tacgia" id="form-tieude" value="<%= data.tacgia%>">
         </div>
         <div class="form-group">
           <label for="">Tiêu đề</label>
           <input type="text" class="form-control" name="tieude" id="form-mota" value="<%= data.tieude%>">
         </div>
         
         <div class="form-group">
           <label for="">Nội dung</label>
           <input type="text" class="form-control" name="noidung" id="form-key" value="<%= data.noidung%>">
         </div>
         <div class="form-group row">
           <div class="col-md-6">
             Ảnh cũ: <img src="../../upload/<%= data.hinhanh%>" width="100px">
           </div>
             <div class="col-md-6">
             <label class="btn btn-default btn-file">Chon cảnh mới</label>
             <input type="file" name="uploadfile">
           </div>
          </div>
           
         <button type="submit" class="btn btn-primary" name="ok">Save</button>

       </form>
  	</div>
  </div>
</div>
<footer class="container-fluid text-center">
  <p>Online Store Copyright</p>  
  <form class="form-inline">Get deals:
    <input type="email" class="form-control" size="50" placeholder="Email Address">
    <button type="button" class="btn btn-danger">Sign Up</button>
  </form>
</footer>

</body>
</html>